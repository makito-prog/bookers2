<h1>Book detail</h1>
<table>
    <tbody>
            <td>
              <%= link_to user_path(current_user.id) do %>
                <%= image_tag book.user.get_profile_image(100, 100) %>
              <% end %>
            </td>
            <td>
              <%= link_to book_path(book.id) do %>
                <%= book.title %>
              <% end %>
            </td>
            <td><%= book.body %></td>
          <% end %>
        </tbody>
</table>