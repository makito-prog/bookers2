<div class="row mb-4">
  <div class="col-md-12">
    <h1>User info</h1>
    <div>
      <%= image_tag user.get_profile_image(100, 100), class: 'mb-3' %>
      <div class="w-75 d-flex flex-column align-items-center">
        <table class="table">
          <tr>
            <th style="width: 30%;">Name</th> 
            <td><%= user.name %></td>
          </tr>
          <tr>
            <th style="width: 30%;">Introduction</th> 
            <td><%= user.introduction %></td>
          </tr>
        </table>
        <%= link_to edit_user_path(@user.id), class: 'btn btn-outline-secondary w-100 mt-2' do %>
          <i class="fa-solid fa-user-gear" style="color: #989da4;"></i>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-8">
    <h1>New book</h1>
    <%= form_with model: book, local: true do |f| %>
      <div class="mb-3">
        <h4>Title</h4>
        <%= f.text_field :title, class: 'form-control' %>
      </div>
      <div class="mb-3">
        <h4>Opinion</h4>
        <%= f.text_area :body, class: 'form-control' %>
      </div>
      <%= f.submit 'Create Book', class: 'btn btn-success' %>
    <% end %>
  </div>
</div>
